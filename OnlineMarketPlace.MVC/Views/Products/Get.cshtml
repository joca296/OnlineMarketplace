@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-6">
        <div id="carouselId" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.ImagePaths.Count; i++)
                {
                    <li class="bg-dark" data-target="#carouselId" data-slide-to="@i" @(i == 0 ? "class=\"active\"" : string.Empty)></li>
                }
            </ol>
            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < Model.ImagePaths.Count; i++)
                {
                    <div class="carousel-item @(i==0?"active": string.Empty)">
                        <img src="~/@Model.ImagePaths[i]" alt="@Model.ImageAlts[i]" style="display:block; margin:0 auto; object-fit: scale-down; height: 300px;">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-6">
        <h1>@Model.Name</h1>
        <h2>@Model.Category.Name - @Model.SubCategory.Name</h2>
        <p>@Model.Description</p>
        <p>Price : @Model.UnitPrice EUR</p>
        <p>Weight : @Model.UnitWeight kg</p>
        <p>Available : @Model.QuantityAvailable</p>
    </div>
</div>