<div id="col-12">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Total Price</th>
                <th scope="col">Total Freight</th>
                <th scope="col">Shipper</th>
                <th scope="col">Shipping Address</th>
                <th scope="col">Products</th>
                <th scope="col">Date Ordered</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var order in Model)
            {
                <tr>
                    <td scope="col">@order.UserEmail</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.TotalFreight</td>
                    <td>@order.Shipper.Name</td>
                    <td>@order.ShippingAddress.Address, @order.ShippingAddress.City, @order.ShippingAddress.Country</td>
                    <td>
                        <ul>
                            @foreach(var product in order.Products)
                            {
                                <li>@product.ProductName (@product.UnitPrice eu * @product.QuantityOrdered)</li>
                            }
                        </ul>
                    </td>
                    <td>@order.DateOrdered</td>
                    <td>
                        <a asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>